{
    "mdl": "Thermostat",
    "mdlpn": "MIHO069",
    "parameters": [
        {
            "id": "BATTERY_LEVEL",
            "component": "sensor",
            "stat_t": "~@/state",
            "config": {
                "icon": "mdi:battery",
                "unit_of_meas": "V",
                "suggested_display_precision": 2
            }
        },
        {
            "id": "THERMOSTAT_MODE",
            "component": "sensor",
            "stat_t": "~@/state",
            "config": {
                "icon": "mdi:thermostat"
            }
        },
        {
            "id": "REL_HUMIDITY",
            "component": "sensor",
            "stat_t": "~@/state",
            "config": {
                "dev_cla": "humidity",
                "unit_of_meas": "%"
            }
        },
        {
            "id": "TEMPERATURE",
            "component": "sensor",
            "stat_t": "~@/state",
            "config": {
                "dev_cla": "temperature",
                "unit_of_meas": "°C"
            }
        },
        {
            "id": "TARGET_TEMP",
            "component": "number",
            "stat_t": "~@/state",
            "cmd_t": "~@/command",
            "config": {
                "dev_cla": "temperature",
                "unit_of_meas": "°C"
            }
        },
        {
            "id": "switch",
            "component": "switch",
            "stat_t": "~@/state"
        },
        {
            "id": "WAKEUP",
            "component": "sensor",
            "stat_t": "~@/state"
        },
        {
            "id": "MOTION_DETECTOR",
            "component": "sensor",
            "stat_t": "~@/state"
        },
        {
            "id": "retries",
            "component": "sensor",
            "stat_t": "~@/state",
            "config": {
                "icon": "mdi:cached"
            }
        },
        {
            "id": "command",
            "component": "sensor",
            "stat_t": "~@/state",
            "config": {
                "icon": "mdi:traffic-light"
            }
        },
        {
            "id": "last_seen",
            "component": "sensor",
            "stat_t": "~@/state",
            "config": {
                "value_template": "{{ as_datetime(value) }}",
                "dev_cla": "timestamp"
            }
        },
        {
            "id": "Climate_Control",
            "component": "climate",
            "config": {
                "max_temp": 30,
                "min_temp": 10,
                "modes": [
                    "heat",
                    "off"
                ],
                "mode_cmd_t": "~THERMOSTAT_MODE/command",
                "mode_stat_t": "~THERMOSTAT_MODE/state",
                "mode_cmd_tpl": "{% if value == 'off' %} 0 {% else %} 1 {% endif %}",
                "mode_stat_tpl": "{% if value == '0' %} off {% else %} heat {% endif %}",
                "temp_cmd_t": "~TARGET_TEMP/command",
                "temp_stat_t": "~TARGET_TEMP/state",
                "curr_temp_t": "~TEMPERATURE/state",
                "current_humidity_topic": "~REL_HUMIDITY/state",
                "icon": "mdi:thermostat",
                "opt": "true",
                "temp_step": "0.5",
                "temp_unit": "C",
                "action_template": "{% if value == 'ON' %} heating {% else %} off {% endif %}",
                "action_topic": "~switch/state"
            }
        },
        {
            "id": "battery",
            "component": "sensor",
            "stat_t": "~@/state",
            "config": {
                "dev_cla": "battery",
                "unit_of_meas": "%"
            }
        }
    ]
}